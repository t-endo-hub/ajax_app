<td>
  <%= link_to user_path(post) do %>
  <%= attachment_image_tag post.user, :image, :fill, 50, 50, fallback: "no_image.jpg",size:'40x40' %>
</td>
<td>
  <%= link_to post.title, post_path(post) %>
</td>
<td>
  <%= post.body %>
  <% end %>
</td>
 <td id="favorite-<%= post.id %>">
  <%= render 'posts/favorites', post: post	 %>
</td>  
