	<div class="col-3">
		<h2>User info</h2>
		<%= attachment_image_tag user, :image, :fill, 100, 100, fallback: "no_image.jpg",size:'100x100' %>
		<table class="table">
			<tbody><tr></tr>
				<tr>
					<th>name</th>
          <th><%= user.name %></th> 
				</tr>
			</tbody>
		</table>
		<div class="row">
			<%= link_to "",edit_user_path(user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_20013" %>
		</div>

		<h2 class="ml-3">New post</h2>
		<%= form_for post do |f| %>
		<div class="field row">
			<%= f.label :title %>
			<%= f.text_field :title, class:"ml-4" %>
		</div>
		<div class="field row"><br>
			<%= f.label :body %>
			<%= f.text_area :body, class:"ml-3"%>
		</div>
		<div class="actions row">
			<%= f.submit "Create post", class:"btn btn-primary" %>
		</div>
		<% end %>
	</div>
